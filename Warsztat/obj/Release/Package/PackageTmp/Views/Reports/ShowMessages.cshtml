@model IEnumerable<Warsztat.Models.CustomerMessages>


<table class="table">
    <tr>
        <div class="mt-5 mb-4">
            <h4><ion-icon name="chatboxes"></ion-icon> Historia czatu </h4>
        </div>

    </tr>
    <hr />

    @foreach (var item in Model)
    {
        <tr>
            <div class="form-group col-md-10 " id=" Title">
                <div class="row bg-dark text-white rounded">
                    <div class="col">
                        @Html.DisplayTextFor(model => item.User) napisał:

                    </div>
                    <div class="col offset-4">
                        @Html.DisplayTextFor(model => item.Date)
                    </div>
                    @Html.TextAreaFor(model => item.Message, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })

                </div>
                
        </tr>

    }
</table>

