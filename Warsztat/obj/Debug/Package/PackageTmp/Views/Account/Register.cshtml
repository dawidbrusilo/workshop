@model Warsztat.Models.RegisterViewModel
@{
    ViewBag.Title = "Zarejestruj";
}

<div class="container ">
    <div class="row">
        <div class="col-10 mx-auto ">
            <div class="card card-signin my-5 shadow-lg p-3 mb-4 bg-white rounded">
                <div class="card-body">
                    <h3 class="card-title text-left offset-4 mt-1 mb-4">
                        Utwórz konto
                    </h3>


                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <hr />

                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="row">

                            <div class="col mb-3">
                                @Html.LabelFor(m => m.Name, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col mb-3">
                                @Html.LabelFor(m => m.LastName, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class=" col mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col mb-3 ">
                                @Html.LabelFor(m => m.City, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col mb-3">
                                @Html.LabelFor(m => m.Street, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col mb-3">
                                @Html.LabelFor(m => m.Phone, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                </div>
                            </div>

                        </div>
                        

                        <div class="row">
                            <div class="col mb-3">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col mb-3">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                                <div>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10 mt-5">
                                    <input id="" type="submit" class="btn btn-dark" value="Zarejestruj" />
                                </div>
                            </div>
                            }

                        </div>
                    </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
