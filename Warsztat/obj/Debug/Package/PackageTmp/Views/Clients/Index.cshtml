@model PagedList.IPagedList<Warsztat.Models.ClientViewModel>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Baza klientów";
}

<h2 class="mt-5">Baza klientów</h2>
@Html.ActionLink("Dodaj klienta", "Register", "Account")
@using (Html.BeginForm())
{
    <form>
        <div class="form-group float-left mt-2">
            <p>
                <b>Wyszukaj po imieniu lub nazwisku:</b> @Html.TextBox("search", null, new { @class = "form-input" })
                <input class="btn btn-dark" type="submit" value="Wyszukaj" />
            </p>
        </div>
    </form>

}

<table class="table table-striped mt-4">
    <thead class="thead-dark">
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Miejscowość
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id })
            </td>

        </tr>
    }

</table>

<div class="text-right mt-5">
    Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) z @Model.PageCount
    <div>@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
</div>
